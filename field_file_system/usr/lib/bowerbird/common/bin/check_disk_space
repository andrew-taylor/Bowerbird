#!/bin/sh
cd $1
threshold_percent=99
df=`df .|sed '1d;s/%.*//;s/.* //'`
message "Disk $df% full"
if test "$df" -ge $threshold_percent && test "$df" -lt 105 # sanity
then
    message 'Cleaning disk'
else
    exit 0
fi
if test -z `find . -type f -name '*.wv'|sed 1q`
then
    message 'Nothing to clean up'
    exit 1
fi
sorted_hours=`
echo '00 19
01 20
02 21
03 22
04 10
05 06
06 04
07 00
08 01
09 03
10 08
11 13
12 15
13 16
14 17
15 18
16 14
17 11
18 07
19 01
20 03
21 05
22 09
23 12'|
sort -k2rn|
sed 's/ .*//'`

for hour in $sorted_hours
do
    count=0
    find . -type f -name "${hour}_*.wv"|
    while test $count -lt 1000
    do
    	# weird bug here
        sed 150q|xargs -r rm
        df=`df .|sed '1d;s/%.*//;s/.* //'`
        test "$df" -lt $threshold_percent && break
        count=`expr $count + 1`
    done
    df=`df .|sed '1d;s/%.*//;s/.* //'`
    test "$df" -lt $threshold_percent && break
done
message 'Cleaning done'
