#!/bin/sh
. /etc/bowerbird/config/global_variables
logger -t $0 "$@"
cd /

case "$1" in
microphone|audio) bit=0;;
nextg) bit=2;;
usb0) bit=4;;
usb1) bit=6;;
[0-9]) bit=$1;;
*)	echo "set_power unknown device '$1'";;
*)	exit 0
esac

value=1
case "$2" in
on) value=0 ;;
esac            

ts7800_util -v1  $bit $value

