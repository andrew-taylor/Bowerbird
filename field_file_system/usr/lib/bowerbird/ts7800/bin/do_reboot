#!/bin/sh
trap ''  1 2 3 7 13 15
. /etc/bowerbird/config/global_variables
message 'rebooting'
ps -ef|egrep 'sound|disk_space|mv_wv_to_disk'|sed "/$$/d;/grep/d;s/^[a-z]* *//;s/ .*//"|xargs -r kill -9
sync
ps -ef|grep watchdog|sed "/$$/d;/grep/d;s/^[a-z]* *//;s/ .*//"|xargs -r kill -9
ts7800_util -v10 3 1
sleep 1
ts7800_util -v10 3 0
sleep 1
logger -t $0 reboot
reboot
